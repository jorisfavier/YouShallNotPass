<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.jorisfavier.youshallnotpass">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:name=".YSNPApplication"
        android:allowBackup="true"
        android:icon="@drawable/ysnp_small"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YouShallNotPass">
        <activity android:name=".ui.home.HomeActivity"></activity>
        <activity android:name=".ui.auth.AuthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.search.SearchFragment"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ui.item.ItemFragment" />
    </application>

</manifest>
