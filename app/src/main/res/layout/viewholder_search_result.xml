<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchResultMainContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchResultItemCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/searchResultItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Vente privee" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/searchResultItemDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchResultItemTitle"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/searchResultItemPasswordTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textAppearance="?attr/textAppearanceCaption"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/item_password"/>

                <TextView
                    android:id="@+id/searchResultItemPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/item_password"
                    app:layout_constraintBaseline_toBaselineOf="@id/searchResultCopyButton"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintTop_toBottomOf="@id/searchResultItemPasswordTitle"
                    app:layout_constraintBottom_toBottomOf="@id/searchResultCopyButton"
                    app:layout_constraintStart_toStartOf="parent"
                    android:inputType="textPassword"/>

                <Button
                    android:id="@+id/searchResultCopyButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/searchResultItemPasswordTitle"
                    style="@style/Widget.App.Button.IconOnly"
                    app:icon="@drawable/ic_outline_copy"/>

                <Button
                    android:id="@+id/searchResultShowHideButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/searchResultCopyButton"
                    app:layout_constraintTop_toTopOf="@id/searchResultCopyButton"
                    style="@style/Widget.App.Button.IconOnly"
                    app:icon="@drawable/ic_visibility"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/searchResultItemEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/edit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/searchResultCopyButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/searchResultItemDeleteButton"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="@string/delete"
                    app:layout_constraintEnd_toStartOf="@id/searchResultItemEditButton"
                    app:layout_constraintTop_toTopOf="@id/searchResultItemEditButton" />




            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
