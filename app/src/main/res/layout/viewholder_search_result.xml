<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="fr.jorisfavier.youshallnotpass.model.Item" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/searchResultMainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/searchResultItemCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/searchResultItemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@{item.title}"
                    tools:text="Vente privee" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/searchResultItemDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/searchResultItemTitle"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/searchResultItemLoginTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/item_login"
                        android:visibility="@{item.hasLogin ? View.VISIBLE : View.GONE}"
                        android:textAppearance="?attr/textAppearanceCaption"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/searchResultItemLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:visibility="@{item.hasLogin ? View.VISIBLE : View.GONE}"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintBaseline_toBaselineOf="@id/searchResultCopyLoginButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/searchResultItemLoginTitle"
                        android:text="@{item.login}"
                        tools:text="test@google.com" />

                    <Button
                        android:id="@+id/searchResultCopyLoginButton"
                        style="@style/Widget.App.Button.IconOnly"
                        android:layout_width="wrap_content"
                        android:visibility="@{item.hasLogin ? View.VISIBLE : View.GONE}"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_outline_copy"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/searchResultItemLoginTitle" />

                    <TextView
                        android:id="@+id/searchResultItemPasswordTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/item_password"
                        android:textAppearance="?attr/textAppearanceCaption"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/searchResultItemLogin" />

                    <TextView
                        android:id="@+id/searchResultItemPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:inputType="textPassword"
                        android:text="@string/item_password"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:layout_constraintBaseline_toBaselineOf="@id/searchResultCopyPasswordButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/searchResultItemPasswordTitle" />

                    <Button
                        android:id="@+id/searchResultCopyPasswordButton"
                        style="@style/Widget.App.Button.IconOnly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_outline_copy"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/searchResultItemPasswordTitle" />

                    <Button
                        android:id="@+id/searchResultShowHideButton"
                        style="@style/Widget.App.Button.IconOnly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_visibility"
                        app:layout_constraintEnd_toStartOf="@id/searchResultCopyPasswordButton"
                        app:layout_constraintTop_toTopOf="@id/searchResultCopyPasswordButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/searchResultItemEditButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/edit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/searchResultCopyPasswordButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/searchResultItemDeleteButton"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@string/delete"
                        app:layout_constraintEnd_toStartOf="@id/searchResultItemEditButton"
                        app:layout_constraintTop_toTopOf="@id/searchResultItemEditButton" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
