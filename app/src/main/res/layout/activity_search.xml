<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="fr.jorisfavier.youshallnotpass.features.search.SearchViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".features.search.SearchActivity">

        <EditText
            android:id="@+id/search_searchedit"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="#212121"

            android:hint="@string/search_placeholder"
            android:inputType="textAutoComplete"
            android:text="@={viewModel.search}"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_height="50dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:visibility="@{viewModel.hasNoResult ? View.GONE : View.VISIBLE}"
            android:id="@+id/search_recyclerView"
            app:layout_constraintTop_toBottomOf="@id/search_searchedit"
            app:layout_constraintBottom_toTopOf="@id/search_separator"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </androidx.recyclerview.widget.RecyclerView>
        <TextView

            android:layout_width="match_parent"
            android:text="@string/common_no_results_found"
            android:visibility="@{viewModel.hasNoResult ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/search_searchedit"
            app:layout_constraintBottom_toTopOf="@id/search_separator"
            android:textAlignment="center"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/search_separator"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@id/search_add_btn"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#22FFFFFF"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/search_add_btn"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/new_string"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@null"
            android:drawableStart="@drawable/ic_add_white"
            android:drawableTint="@color/primaryTextColor"
            android:onClick="addNewItem"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
